{
    "name": "taqie/laravel-article-receiver",
    "description": "Laravel package for receiving articles",
    "type": "library",
    "license": "MIT",
    "keywords": ["laravel", "articles", "receiver"],
    "authors": [
        {
            "name": "Gracjan Kubicki",
            "email": "graca.kubicki@gmail.com"
        }
    ],
    "require": {
        "php": "^8.5",
        "illuminate/support": "^11.0|^12.0",
        "laravel/sanctum": "^4.0"
    },
    "require-dev": {
        "driftingly/rector-laravel": "^2.1",
        "laravel/pint": "^1.27",
        "orchestra/testbench": "^9.0|^10.0",
        "pestphp/pest": "^4.0",
        "pestphp/pest-plugin-laravel": "^4.0",
        "rector/rector": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "Taqie\\LaravelArticleReceiver\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Taqie\\LaravelArticleReceiver\\Tests\\": "tests/",
            "Taqie\\LaravelArticleReceiver\\Tests\\Stubs\\Sanctum\\": "tests/Stubs/Sanctum/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Taqie\\LaravelArticleReceiver\\ArticleReceiverServiceProvider"
            ]
        }
    },
    "scripts": {
        "test": "pest",
        "test:coverage": "pest --coverage"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
